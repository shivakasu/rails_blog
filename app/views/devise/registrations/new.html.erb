<body>
<div class="htmleaf-container">
  <div class="cont_principal">
    <div class="cont_join  ">
      <div class="cont_letras">
        <p>LET 'S</p>
        <p>GET</p>
        <p>LOST</p>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: { class: "cont_form_join" }) do |f| %>
          <h2>JOIN</h2>
          <%= devise_error_messages! %>
          <p>username:</p>
          <%= f.text_field :username, autofocus: true ,class:"input_text"%>
          <p>email:</p>
          <%= f.email_field :email,class:"input_text"%>
          <p>password:</p>
          <%= f.password_field :password, autocomplete: "off" ,class:"input_text"%>
          <p>password comfirm:</p>
          <%= f.password_field :password_confirmation, autocomplete: "off" ,class:"input_text"%>
      <%end%>

      <div class="cont_join_form_finish">
        <h2>Finish <i class="material-icons">&#xE5CA;</i></h2>
      </div>

      <div class="cont_btn_join">
        <a href="#" onclick='join_1()'>JOIN</a>
      </div>
    </div>
  </div>
</div>

<script>
    var t = 0;
    function join_1(){
        if(t == 0){  document.querySelectorAll('.cont_letras > p')[0].style.left = '200px';
            document.querySelectorAll('.cont_letras > p')[1].style.left = '-320px';
            document.querySelectorAll('.cont_letras > p')[2].style.left = '200px';
            setTimeout(function(){
                document.querySelector('.cont_join').className = 'cont_join cont_join_form_act';
            },1000);
            t++;
        }else{
            t++;
            document.querySelector('.cont_form_join').style.bottom = '-420px';
            setTimeout(function(){
                    document.querySelector('.cont_join').className = 'cont_join cont_join_form_act cont_join_finish';
                }
                ,500);
        }
    }
</script>
</body>
