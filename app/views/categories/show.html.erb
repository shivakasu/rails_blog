
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to @title, root_path, class:"navbar-brand"%>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav cl-effect-14">
        <% @categories.each do |cate|%>
            <%if cate.id==@category.id%>
                <%= content_tag :li,(link_to cate.name, show_category_path(cate.id)),class:"active" %>
            <% else %>
                <%= content_tag :li,(link_to cate.name, show_category_path(cate.id)) %>
            <%end%>
        <%end%>
      </ul>
      <form class="navbar-form navbar-right">
        <input type="text" class="form-control" placeholder="Search...">
      </form>
    </div><!--/.nav-collapse -->
  </div>
</nav>


<div class="container theme-showcase" role="main">
  <div class="article-list">
    <% @articles.each do |ar|%>
      <div class="panel panel-default">
          <h2><%= ar.title %></h2>
          <p class="article-author">by
            <%= link_to ar.user.username,"#" %>
            <%= "      "+DateTime.parse(ar.created_at.to_s).strftime('%Y-%m-%d %H:%M:%S').to_s%>
          </p><hr>
          <p class="article-content">
            <%= ar.content %>
          </p><hr>
      </div>
    <%end%>
  </div>
 </div>


</div> <!-- /container -->
</body>